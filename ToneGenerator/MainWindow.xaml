<Window x:Class="ToneGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToneGenerator"
        mc:Ignorable="d" Name="root"
        Title="Tone Generator" Width="400" Height="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Slider Grid.Row="0" Value="{Binding Path=ToneAudioRenderer.Volume, ElementName=root, Mode=TwoWay}" Minimum="0.0" Maximum="1.0" />
        <Slider Grid.Row="1" Value="{Binding Path=ToneAudioRenderer.Frequency, ElementName=root, Mode=TwoWay}" Minimum="0.0" Maximum="20154.0" />
    </Grid>
</Window>
